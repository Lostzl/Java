//CLASSE APLICATIVO C/ ESTUDANTE MODELADOR

package exercicies;
import java.io.*;
public class EstudanteMod {
	public static void main(String[] args) {
		Estudante a = new Estudante();
		a.setNome("Lucas");
		a.setMatricula(201703684);
		a.setCurso("Eng. Comp.");
		a.setDataNasc("15/02/1997");
		a.setNota1(6.10);
		a.setNota2(5.0);
		a.status();
		a.aprovacao();
		
	}
}
